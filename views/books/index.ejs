<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Books</title>
</head>
<body>
    <h1>Books</h1>
    <a href="/books/create">Add New Book</a>
    <ul>
        <% books.forEach(book => { %>
            <li>
                <%= book.title %> - <%= book.price %> - <%= book.genre %> 
                <a href="/books/<%= book.book_id %>/edit">Edit</a>
                <form action="/books/<%= book.book_id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?');" style="display: inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
    <br>
<a href="/">Back to home</a>
</body>
</html>