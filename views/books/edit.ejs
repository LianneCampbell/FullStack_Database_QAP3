<!-- This is the HTML document structure for the Edit Book page -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tag for character encoding -->
    <meta charset="UTF-8">
    
    <!-- Title of the webpage -->
    <title>Edit Book</title>
    
    <!-- Link to the external stylesheet -->
    <link rel="stylesheet" href="/styles.css">
    
    <!-- Preconnect and link to an external Google font -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+IS:wght@100..400&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Main heading for the Edit Book page -->
    <h1>Edit Book</h1>
    <hr>
    <br>
    
    <!-- Form to update book details -->
    <form action="/books/<%= book.book_id %>?_method=PUT" method="POST">
        <!-- Input field for the book title -->
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="<%= book.title %>" required>
        
        <!-- Input field for the book price -->
        <label for="price">Price:</label>
        <input type="number" name="price" id="price" value="<%= book.price %>" required>
        
        <!-- Input field for the book genre -->
        <label for="genre">Genre:</label>
        <input type="text" name="genre" id="genre" value="<%= book.genre %>" required>
        
        <!-- Input field for the author ID -->
        <label for="author_id">Author ID:</label>
        <input type="number" name="author_id" id="author_id" value="<%= book.author_id %>" required>
        
        <!-- Button to submit the form and update the book -->
        <button type="submit">Update Book</button>
    </form>
    <br>
    
    <!-- Image displayed on the Edit Book page -->
    <img src="/images/image-from-rawpixel-id-6287687-png.png" alt="BookImage" width="400"/>
    <br>
    <hr>
    
    <!-- Link to go back to the list of books -->
    <div class="textbox">
        <a href="/books/">Go Back</a>
    </div>
    
    <!-- Footer section with copyright information -->
    <footer>
        <p>&copy; Lianne Campbell 2024</p> 
    </footer>
</body>
</html>