<!-- This is the HTML document structure for the Customers page -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tag for character encoding -->
    <meta charset="UTF-8">
    
    <!-- Title of the webpage -->
    <title>Customers</title>
    
    <!-- Link to the external stylesheet -->
    <link rel="stylesheet" href="/styles.css">
    
    <!-- Preconnect and link to an external Google font -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+IS:wght@100..400&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Main heading for the Customers page -->
    <h1>Customers</h1>
    <hr>
    <br>
    
    <!-- Link to create a new customer -->
    <div class="textbox">
        <a href="/customers/create">Create New Customer</a>
    </div>
    
    <!-- List of customers -->
    <ul>
        <% customers.forEach(customer => { %>
            <li>
                <!-- Display customer name and email -->
                <%= customer.name %> - <%= customer.email %>
                
                <!-- Link to edit a customer -->
                <a href="/customers/<%= customer.customer_id %>/edit">Edit</a>
                
                <!-- Form to delete a customer -->
                <form action="/customers/<%= customer.customer_id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this customer?');" style="display: inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
    
    <br>
    
    <!-- Link to view customers as JSON -->
    <div class="textbox">
        <a href="/customers/api">View as JSON</a>
    </div>
    
    <br>
    
    <!-- Image displayed on the Customers page -->
    <img src="/images/Adapted_Wikipedia20symbol_community.svg.png" alt="Community" width="400"/>
    <br>
    <hr>
    
    <!-- Link to go back to the home page -->
    <div class="textbox">
        <a href="/">Back to home</a>
    </div>
    
    <!-- Footer section with copyright information -->
    <footer>
        <p>&copy; Lianne Campbell 2024</p> 
    </footer>
</body>
</html>