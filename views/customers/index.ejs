<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Customers</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+IS:wght@100..400&display=swap" rel="stylesheet">
</head>
<body>
    <h1>Customers</h1>
    <hr>
    <br>
    <div class="textbox">
    <a href="/customers/create">Create New Customer</a>
</div>
    <ul>
        <% customers.forEach(customer => { %>
            <li>
                <%= customer.name %> - <%= customer.email %>
                <a href="/customers/<%= customer.customer_id %>/edit">Edit</a>
                <form action="/customers/<%= customer.customer_id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this customer?');" style="display: inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
    
    <br>
    <div class="textbox">
        <a href="/customers/api">View as JSON</a>
        </div>
        <br>
        <img src="/images/Adapted_Wikipedia20symbol_community.svg.png" alt="BookImage" width="400"/>
        <br>
        <hr>
        <div class="textbox">
        <a href="/">Back to home</a>
        </div>
        <footer>
            <p>&copy; Lianne Campbell 2024</p> 
        </footer>
</body>
</html>